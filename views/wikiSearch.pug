html(lang="en")
head 
    title Wiki Search
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")

body
    h1 Wiki Search
    form(action="/personal" method="GET")
        label(for="q") Search Query:
        input(type="text" name="q" id="q" required)
        br
        label Boost using PageRank score:
        |  
        input(type='radio', name='boost', value='true')
        label True
        |  
        input(type='radio', name='boost', value='false', checked)
        label False
        br
        label(for="limit") Result Limit (1-50)
        input(type="number" name="limit" id="limit" min="1" max="50" value="10")
        br
        button(type="submit") Search